#-----------------------------
# ✅ Server settings
#-----------------------------
NODE_ENV=production
PORT=3010
SERVER_HOST_URL=https://mirotalksfu-production-559a.up.railway.app
SERVER_HOST_PORT=443
SERVER_SECURE=true
SERVER_PRIVATE_IP=
SERVER_PUBLIC_IP=

#-----------------------------
# ✅ HTTPS (Railway上では自動対応)
#-----------------------------
SSL_KEY_FILE=
SSL_CERT_FILE=
SSL_CHAIN_FILE=

#-----------------------------
# ✅ Logging and debug
#-----------------------------
DEBUG=false

#-----------------------------
# ✅ TURN/STUN (必須に近い設定)
#-----------------------------
USE_TURN=true
TURN_LIST=[{"urls":"stun:stun.l.google.com:19302"},{"urls":"turn:turn.anyfirewall.com:443?transport=tcp","username":"webrtc","credential":"webrtc"}]
TURN_USERNAME=webrtc
TURN_PASSWORD=webrtc

#-----------------------------
# ✅ Recording & Streaming (OFF)
#-----------------------------
ENABLE_FILE_RECORDING=false
ENABLE_STREAM_RECORDING=false
ENABLE_RTMP_STREAMING=false

#-----------------------------
# ✅ Authentication (推奨: JWT)
#-----------------------------
ENABLE_AUTH=true
JWT_SECRET=your_super_secret_jwt_key

#-----------------------------
# ✅ Room config
#-----------------------------
MAX_ROOM_USERS=16
MAX_USERS=100

#-----------------------------
# ✅ Chat, Whiteboard, GPTなど（任意）
#-----------------------------
ENABLE_CHAT=true
ENABLE_WHITEBOARD=false
ENABLE_CHATGPT=false

#-----------------------------
# ✅ UI/UX設定
#-----------------------------
LOBBY_ROOM=true
LOBBY_ROOM_ADMIN_ONLY=true
ENABLE_AUDIO_LEVEL_INDICATOR=true

#-----------------------------
# ✅ CORS 設定（本番用に限定）
#-----------------------------
CORS_ORIGINS=https://mirotalksfu-production-559a.up.railway.app

#-----------------------------
# ✅ Webhook or Email通知など（未使用なら空）
#-----------------------------
SLACK_WEBHOOK_URL=
SENDGRID_API_KEY=
EMAIL_FROM=
EMAIL_TO=
