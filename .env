#-----------------------------
# ✅ Server settings
#-----------------------------
NODE_ENV=production
PORT=3010
SERVER_HOST_URL=https://mirotalksfu-production-559a.up.railway.app
SERVER_HOST_PORT=443
SERVER_SECURE=true
SERVER_PRIVATE_IP=
SERVER_PUBLIC_IP=

#-----------------------------
# ✅ HTTPS (Railwayは自動対応なので空でOK)
#-----------------------------
SSL_KEY_FILE=
SSL_CERT_FILE=
SSL_CHAIN_FILE=

#-----------------------------
# ✅ Logging and debug
#-----------------------------
DEBUG=false

#-----------------------------
# ✅ TURN/STUN サーバー設定（無料）
#-----------------------------
USE_TURN=true
TURN_LIST=turn:relay.backups.cz:3478?transport=udp,turn:relay.backups.cz:3478?transport=tcp
TURN_USERNAME=webrtc
TURN_PASSWORD=webrtc

#-----------------------------
# ✅ Recording / Streaming
#-----------------------------
ENABLE_FILE_RECORDING=false
ENABLE_STREAM_RECORDING=false
ENABLE_RTMP_STREAMING=false

#-----------------------------
# ✅ JWT認証（簡易的な秘密鍵でOK）
#-----------------------------
ENABLE_AUTH=true
JWT_SECRET=your_super_secret_jwt_key_here_change_this

#-----------------------------
# ✅ ルーム人数など
#-----------------------------
MAX_ROOM_USERS=16
MAX_USERS=100

#-----------------------------
# ✅ UI/UX & 機能
#-----------------------------
ENABLE_CHAT=true
ENABLE_WHITEBOARD=false
ENABLE_CHATGPT=false
ENABLE_AUDIO_LEVEL_INDICATOR=true
LOBBY_ROOM=true
LOBBY_ROOM_ADMIN_ONLY=true

#-----------------------------
# ✅ CORS設定（本番ドメインに限定）
#-----------------------------
CORS_ORIGINS=https://mirotalksfu-production-559a.up.railway.app

#-----------------------------
# ✅ 通知など（使わないなら空）
#-----------------------------
SLACK_WEBHOOK_URL=
SENDGRID_API_KEY=
EMAIL_FROM=
EMAIL_TO=
